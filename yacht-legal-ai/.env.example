# Base URL for Supabase project (public)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"

# Supabase anon/public API key (safe for client)
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key"

# Supabase service role key (server-only, full access)
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"

# Google Gemini API key for LLM and embeddings
GEMINI_API_KEY="your_gemini_api_key"

# Public base URL of the app (used in client/server links)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Optional: use faster generation mode (0 = off, 1 = on)
RAG_FAST_MODE="0"

# Optional: document filter strictness (STRICT or BALANCED)
RAG_DOC_FILTER_MODE="STRICT"

# Optional: enable RAG metrics logging (0 = off, 1 = on)
RAG_METRICS_LOG="1"

# Optional: metrics log output file path
RAG_METRICS_FILE="./logs/gemini-rag.log"

# Optional: API rate limit per minute (default 10)
MAX_REQUESTS_PER_MINUTE="10"

# Optional: max upload size in MB (default 10)
MAX_FILE_SIZE_MB="10"

# Optional: runtime environment (development, production, test)
NODE_ENV="development"
